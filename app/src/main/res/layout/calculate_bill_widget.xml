<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/tv_widget_title"
        android:text="@string/quick_bill"
        android:layout_centerHorizontal="true"
        style="@style/titleStyle"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/subtotal"
        android:layout_below="@+id/tv_widget_title"
        android:layout_toStartOf="@+id/tv_widget_item_subtotal"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_widget_item_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/hint_total"
        android:text="@string/hint_total"
        android:layout_below="@+id/tv_widget_title"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tax"
        android:layout_below="@+id/tv_widget_item_subtotal"
        android:layout_toStartOf="@+id/tv_widget_item_tax"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_widget_item_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/hint_total"
        android:layout_below="@+id/tv_widget_item_subtotal"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tip"
        android:layout_below="@+id/tv_widget_item_tax"
        android:layout_toStartOf="@+id/tv_widget_item_tip"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_widget_item_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_widget_item_tax"
        android:layout_alignParentEnd="true"
        android:text="@string/hint_total"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/grand_total"
        android:layout_below="@+id/tv_widget_item_tip"
        android:layout_toStartOf="@+id/tv_widget_item_grand_total"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_widget_item_grand_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_widget_item_tip"
        android:layout_alignParentEnd="true"
        android:text="@string/hint_total"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/each_person_should_pay"
        android:layout_below="@+id/tv_widget_item_grand_total"
        android:layout_toStartOf="@+id/tv_widget_item_person_pay"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_widget_item_person_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_widget_item_grand_total"
        android:layout_alignParentEnd="true"
        android:text="@string/hint_total"
        android:textColor="@color/white"/>

    <!-- <Button
        android:id="@+id/btn_widget_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/email"
        style="@style/buttonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/> -->

</RelativeLayout>